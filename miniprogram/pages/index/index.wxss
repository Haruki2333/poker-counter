.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  margin: 60rpx 0;
  text-align: center;
}

.title-line {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 68rpx;
  font-weight: bold;
  line-height: 1.5;
  color: #333;
}

.title-icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}

.recent-rooms {
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  width: 100%;
  height: 660rpx;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.room-list {
  flex: 1;
  position: relative;
}

.room-header {
  flex: none;
  display: flex;
  background: #f8f8f8;
  padding: 15rpx 0;
  font-weight: 450;
  font-size: 26rpx;
  color: #666;
  border-bottom: 2rpx solid #eee;
}

.room-items {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}

.room-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  color: #333;
}

.room-item:last-child {
  border-bottom: none;
}

.col {
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.room-code-col {
  flex: 0 0 120rpx;
  padding-left: 20rpx;
}

.room-code-link {
  text-decoration: underline;
}

.room-name-col {
  flex: 0 0 180rpx;
  max-width: 180rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chip-amount-col {
  flex: 0 0 120rpx;
}

.create-time-col {
  flex: 1;
  padding-right: 20rpx;
}

.bottom-buttons {
  position: fixed;
  bottom: 16vh;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
}

.btn {
  margin: 0;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  width: 45% !important;
  padding: 0 30rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.create-btn {
  background: #07c160;
  color: #fff;
}

.join-btn {
  background: #fff;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.create-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
  width: 540rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 16rpx 24rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 450;
  line-height: 1.2;
}

.modal-close {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #888;
  line-height: 1;
  padding: 10rpx;
}

.modal-body {
  padding: 20rpx 24rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.input-group {
  margin-bottom: 16rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.input-control {
  height: 72rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.input-control:focus {
  border-color: #1989fa;
}

.modal-footer {
  padding: 0;
  display: flex;
  border-top: 1rpx solid #eee;
  gap: 0;
}

.modal-btn {
  flex: 1;
  height: 88rpx !important;
  line-height: 88rpx !important;
  margin: 0;
  font-size: 32rpx;
  font-weight: 450 !important;
  border-radius: 0 !important;
  background: #fff !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
}

.modal-btn + .modal-btn {
  position: relative;
}

.modal-btn + .modal-btn::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background: #eee;
}

.cancel-btn {
  color: #333 !important;
}

.confirm-btn {
  color: #576b95 !important;
}
